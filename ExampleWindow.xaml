    </Window.Resources>


    <StackPanel>

        <StackPanel>
            <Border Background="Green" Padding="10">
                <!--<local:CropableImage Background="Red" Skips="{StaticResource Skips}" Bitmaps="{StaticResource Bitmaps}" ShiftY="20" CropHeight="50" ShiftX="30" CropWidth="1000">-->
                <!-- ShiftY="5" CropWidth="70" ShiftX="5" CropHeight="150"-->
                <StackPanel>
                    <local:CropableImage Background="White" Skips="{StaticResource Skips}" Bitmaps="{StaticResource Bitmaps}" ShiftY="40">
                        <local:CropableImage.LayoutTransform>
                        <ScaleTransform>
                                <ScaleTransform.ScaleX>3</ScaleTransform.ScaleX>
                                <ScaleTransform.ScaleY>3</ScaleTransform.ScaleY>
                        </ScaleTransform>
                    </local:CropableImage.LayoutTransform>
                </local:CropableImage>
                </StackPanel>
            </Border>
        </StackPanel>

